		<script>	
			var map,
				 infowindow,
				 colorScale = ['#d73027','#f46d43','#fdae61','#fee090','#e0f3f8','#abd9e9','#74add1','#4575b4'],
				 polyHolder = new google.maps.Data();

			function initialize() {

				$('a').attr("href", "javascript:void(0)");

				var mapOptions = {
					center: new google.maps.LatLng(51.7551,-1.25),
					zoom: 12,
					mapTypeId: google.maps.MapTypeId.ROADMAP,
					streetViewControl: false,
					panControl: false,
					minZoom: 12,
				}
				map = new google.maps.Map(document.getElementById("target"), mapOptions);
				
				
				var datelist = ['June 6th, 2013','July 8th, 2013','October 12th, 2013','February 1st, 2014','January 19th, 2015','February 4th, 2015','April 9th, 2015','May 27th, 2015'];
					 temps = [],
					 wardTemps = [],
					 wardData = new google.maps.Data();
				
				$('li').click(function(){
					wardData.setMap(null);				
					var date = (this).id;
				   var showdate = (this).value;
					$('#mapDate').text(datelist[showdate]);					
					loadWardData(date);
				})
				
				loadWardData("MEANJun13U");
				
				function loadWardData(date){
					
					wardData.loadGeoJson('WardMeans.geojson',{idPropertyName:"NAME"},function (features){
						features.forEach(function(f){	
							var geomArray = f.getGeometry().getArray();
							var coords = [];
							temps.push(f.getProperty(date)); //add ward temperature to temps []
							wardTemps[f.getId()] = f.getProperty(date); //add a key-value ward-temp pair to wardTemps[]
							
							geomArray.forEach(function(p){

								var pointArray = p.getArray();

								for (var i=0; i<pointArray.length; i++){
								var iPoint = pointArray[i];
								var point = new google.maps.LatLng(iPoint.A,iPoint.F);
								
								coords.push(point);
								}
							})
							
							var x = [],
								 y = [];

							for (var i=0; i<coords.length; i++){
								x.push(coords[i].F);
								y.push(coords[i].A);																						
							}
							x.sort(function(a,b){return a-b});
							y.sort(function(a,b){return a-b});

							var xmin = x[0],
								 ymin = y[0],
								 xmax = x[coords.length-1],
								 ymax = y[coords.length-1],
								 center = {},
								 date2 = date.slice(0,length-1)+"S",
								 tempU = f.getProperty(date),
								 tempS = (f.getProperty(date2)-272.15).toFixed(2)

							center.x = xmin + ((xmax - xmin)/2);
							center.y = ymax - ((ymax - ymin)/2);		
							
							var cent = new google.maps.LatLng(center.y,center.x);
							var poly = new google.maps.Polygon({
													paths: coords,
													ID: f.getId(),
													map: map,
													utemp: tempU,
													stemp: tempS,
													desc: '<b>'+f.getId()+'</b><br>Urban Temp: '+tempU.toFixed(2)+
															'<br>Surface Temp: '+tempS								
													});
							console.log(poly.ID);
							//poly.setMap(map);	//set map for each polygon created
							addInfo(poly, cent);	//add event listener and infowindows							
						})
						temps.sort(function(a,b){return b-a});						
						//stylePoly(polyHolder,temps);
					});
				};	

				function stylePoly(p,t){
					console.log("In stylePoly");
					console.log(p);
					p.setStyle(function(poly){
					console.log(poly);
					var Id = poly.getId();
					var uTemp = poly.utemp;
					console.log(Id);
					console.log(uTemp);
					var count = 0;
						while (uTemp != temps[count]){
							count++;
						}
					count = Math.floor(count/3);
					return {
								fillColor: colorScale[count],
								strokeWeight: 1.5,
								fillOpacity: 0.7
							 };							
					})
				};
			}			

				
			
				function addInfo(feat,c) {
					//feat.setOptions({fillColor: 'red',fillOpacity:0.7});					

					infowindow = new google.maps.InfoWindow();

					google.maps.event.addListener(feat, 'click', function(){						
						infowindow.setPosition(c);
						infowindow.setContent(feat.desc);
						infowindow.open(map);
					});
										
				};

			google.maps.event.addDomListener(window, 'load', initialize);			
			
		</script>		
